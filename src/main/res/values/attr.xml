<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="DigitalView">
        <attr name="digiColor" format="color"/>
        <attr name="digiTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DigitalGroupView">

        <attr name="digiGroupColor" format="color"/>
        <attr name="digiGroupTextSize" format="dimension"/>
        <attr name="digiGroupFigureCounts" format="integer"/>
        <attr name="digiGroupInterval" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="customButton">
        <attr name="normalSolidColor" format="color" />
        <attr name="pressedSolidColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="normalStrokeColor" format="color" />
        <attr name="pressedStrokeColor" format="color" />
        <attr name="roundRadius" format="dimension" />
        <attr name="roundLeftTopRadius" format="dimension" />
        <attr name="roundLeftBottomRadius" format="dimension" />
        <attr name="roundRightTopRadius" format="dimension" />
        <attr name="roundRightBottomRadius" format="dimension" />
        <attr name="normalDrawable" format="reference" />
        <attr name="pressedDrawable" format="reference" />
        <attr name="isSelected" format="boolean" />
        <attr name="normalTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="noLeftStroke" format="boolean"/>
        <attr name="noRightStroke" format="boolean"/>
        <attr name="noTopStroke" format="boolean"/>
        <attr name="noBottomStroke" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundIndicatorView">
        <!--最大数值-->
        <attr name="maxNum" format="integer"/>
        <!--圆盘起始角度-->
        <attr name="startAngle" format="integer"/>
        <!--圆盘扫过的角度-->
        <attr name="sweepAngle" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RulerView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="lineSpaceWidth" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineMaxHeight" format="dimension" />
        <attr name="lineMidHeight" format="dimension" />
        <attr name="lineMinHeight" format="dimension" />
        <attr name="textMarginTop" format="dimension" />
        <attr name="alphaEnable" format="boolean" />
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="selectorValue" format="float"/>
        <attr name="perValue" format="float"/>
    </declare-styleable>

    <declare-styleable name="BingZhuangTuView">
        <attr name="rsv_RingWidth" format="reference|dimension"/>
        <attr name="rsv_CenterText" format="reference|string"/>
        <attr name="rsv_CenterNumber" format="reference|string"/>
        <attr name="rsv_CenterTextColor" format="reference|color"/>
        <attr name="rsv_CenterNumberColor" format="reference|color"/>
        <attr name="rsv_CenterTextSize" format="reference|dimension"/>
        <attr name="rsv_CenterNumberSize" format="reference|dimension"/>
        <attr name="rsv_PercentTextSize" format="reference|dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleSeekBar">
        <attr name="wheel_max_process" format="integer" />
        <attr name="wheel_cur_process" format="integer" />
        <attr name="wheel_reached_color" format="color" />
        <attr name="wheel_reached_width" format="dimension" />
        <attr name="wheel_reached_has_corner_round" format="boolean"/>
        <attr name="wheel_unreached_color" format="color" />
        <attr name="wheel_unreached_width" format="dimension" />
        <attr name="wheel_pointer_color" format="color" />
        <attr name="wheel_pointer_radius" format="dimension" />
        <attr name="wheel_has_pointer_shadow" format="boolean" />
        <attr name="wheel_has_wheel_shadow" format="boolean" />
        <attr name="wheel_pointer_shadow_radius" format="dimension" />
        <attr name="wheel_shadow_radius" format="dimension" />
        <attr name="wheel_has_cache" format="boolean" />
        <attr name="wheel_can_touch" format="boolean" />
        <attr name="wheel_scroll_only_one_circle" format="boolean" />
    </declare-styleable>
</resources>